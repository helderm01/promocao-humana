@model PromocaoHumana.Web.Models.Doacao.DoacaoViewModel

@using (Html.BeginForm("Salvar", "Doacao", FormMethod.Post))
{
    @if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
    {
        @:<div class="alert alert-danger">
        @:<p > @ViewBag.ErrorMessage </p >
        @:</div >
    }

    <fieldset>
        <div hidden>
            @Html.EditorFor(model => model.Id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LocalRetirada)
        </div>
        <div class="editor-field">
            @Html.DropDownList("Igrejas", (IEnumerable<SelectListItem>)ViewData["Igrejas"])
            @Html.ValidationMessageFor(model => model.LocalRetirada)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Familia)
        </div>
        <div class="editor-field">
            @Html.DropDownList("Familias", (IEnumerable<SelectListItem>)ViewData["Familias"])
            @Html.ValidationMessageFor(model => model.Familia)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.QuemRetirou)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.QuemRetirou)
            @Html.ValidationMessageFor(model => model.QuemRetirou)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Descricao)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Descricao, 5)
            @Html.ValidationMessageFor(model => model.Descricao)
        </div>
    </fieldset>

    <br/>

    <div>

        @Html.ActionLink("Voltar", "Index")
        <input type="submit" value="Salvar" class="btn btn-success"/>

    </div>
}