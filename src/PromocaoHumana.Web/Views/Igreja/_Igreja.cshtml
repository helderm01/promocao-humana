@model PromocaoHumana.Web.Models.Igreja.IgrejaViewModel

@using (Html.BeginForm("Salvar", "Igreja", FormMethod.Post))
{
    @if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
    {
        @:<div class="alert alert-danger">
            @:<p> @ViewBag.ErrorMessage </p>
        @:</div>
    }
<fieldset>

    <div hidden>
        @Html.EditorFor(model => model.Id)
    </div>

    <legend>Igreja</legend>
    <div class="form-group">
        @Html.LabelFor(model => model.Nome)
        @Html.EditorFor(model => model.Nome, additionalViewData: new { htmlAttributes = new { @class = "form-control", placeholder = "Informe o nome " } })
        @Html.ValidationMessageFor(model => model.Nome)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Cnpj)
        @Html.EditorFor(model => model.Cnpj, additionalViewData: new { htmlAttributes = new { @class = "form-control", placeholder = "Informe o CNPJ " } })
        @Html.ValidationMessageFor(model => model.Cnpj)
    </div>

</fieldset>

    <br />

    <div>
        @Html.ActionLink("Voltar", "Index", new { id = 1 }, new { @class = "btn btn-outlined" })
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
}